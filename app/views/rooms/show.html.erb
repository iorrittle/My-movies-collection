
<div class="chat__main">

  <div class="room__left__wrapper"> 

      <div class="room__image__cover">
        <%= image_tag @room.image, class: "room__image" %>
       
        <div class="room__heading">
          <%= "#{@room.title}"%>
        </div>
          <div class="room__list">
            
            <p class="room__list__name"><%= "#{@room.director} / 監督" %></p>
            <p class="room__list__name"><%= "#{@room.starring} / 主演" %></p>
            <p class="room__list__name"><%= "ジャンル/#{@room.genre.name}  " %></p>
            <p class="room__list__name"><%= "#{@room.public_year.name} 公開作品 " %></p>
          </div>
      <% if user_signed_in? && current_user.id == 4 %>
        <div class="movie__manage">
        
          <div class="movie__btn">
          <i class="fas fa-bowling-ball fa-2x"></i><%= link_to '編集する', edit_room_path(@room.id), method: :get ,class: "edit-text"%>
          </div>
          <div class="movie__btn">
          <i class="fas fa-bowling-ball fa-2x"></i><%= link_to '削除する', room_path(@room.id), method: :delete,class: "edit-text"%>
          </div>
        </div>
      <% end %>
    
      
      </div>
  </div> 

  <div class="chat__area">
    <div class="room__heading__name">Movie chat</div>
    <%= form_with model: [@room, @comment],　local: true do |f|%>
    <div class="comment__field">
      <%= f.text_field :content ,id:"comment__content"%>
      <%= f.submit '投稿する' ,class:"comment__submit", id: "comment-submit" %><i class="fas fa-pencil-alt"></i>
      
    </div>
    <% end %>

    
  
   
      <% @comments.each do |comment| %>
      <div class="content">
        <div class="comennt-date">
          投稿日時：<%= comment.created_at %>
        </div>
        <div class="comment-content">
          <%= comment.content %>
          <%= link_to "#{comment.user.nickname}","/users/#{comment.user.id}", class: :comment_user %>
        </div>
      </div>
    <% end %>
    
  </div>
</div>