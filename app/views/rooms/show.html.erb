
<div class="chat__main">

  <div class="room__left__wrapper"> 

      <div class="room__image__cover">
        <%= image_tag @room.image, class: "room__image" %>
       
        <div class="room__heading">
          <%= "#{@room.title}"%>
        </div>
          <div class="room__list">
            
            <p class="room__list__name"><%= "#{@room.director} / 監督" %></p>
            <p class="room__list__name"><%= "#{@room.starring} / 主演" %></p>
            <p class="room__list__name"><%= "ジャンル/#{@room.genre.name}  " %></p>
            <p class="room__list__name"><%= "#{@room.public_year.name} 公開作品 " %></p>
          </div>
        
      
      </div>
  </div> 

  <div class="chat__area">
   <div class="room__heading__name">Movie chat</div>
   <%= form_with model: [@room, @comment],local: true do |f|%>
    <%= f.text_field :content %>
    <%= f.submit '投稿する' , id: "submit" %>
  <% end %>

    <div id="list">
    </div>
 
 
  
   
    <% @comments.each do |comment| %>
    <div class="post">
      <div class="post-date">
        投稿日時：<%= comment.created_at %>
      </div>
      <div class="post-content">
        <%= comment.content %>
      </div>
    </div>
    <% end %>
  </div>
</div>